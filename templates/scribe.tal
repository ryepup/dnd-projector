<html xmlns:tal="http://common-lisp.net/project/bese/tal/core"
      tal:in-package=":dnd-projector">
  <head>
    <title>Scribe</title>
    <script src="s/jquery.min.js"></script>
    <script src="s/jquery.mobile-1.0a1/jquery.mobile-1.0a1.min.js"></script>
    <link href="s/jquery.mobile-1.0a1/jquery.mobile-1.0a1.min.css" rel="stylesheet"/>
    <script src="s/scribe.js" type="text/javascript"></script>
    <style>
      .hostile {color:red !important; }
    </style>
  </head>
  <body>

    <div id="players" data-role="page">
      <div data-role="header" data-position="inline">
	<a href="#settings" data-icon="gear">Settings</a>
	<h1>DND Combat</h1>
	<a rel="external" href="scribe-turn" data-icon="check">TURN</a>
      </div>
      <div data-role="content">
	<ul data-role="listview" id="playerList">
	  <li tal:dolist="$players">
	    <a href="scribe-edit?id=${$id}" class="${$css-class}" data-rel="dialog" tal:content="$name"/>
	    <div class="ul-li-aside">
	      I:<span tal:content="$initiative"/>
	      D:<span tal:content="$damage"/>
	    </div>
	  </li>
	</ul>	  
      </div>
    </div>

    <div id="settings" data-role="page">
      <div data-role="header">
	<h1>Settings</h1>
      </div>
      <div data-role="content">
	<ul data-role="listview">
	  <li><a href="#addPlayer">Add Player</a></li>
	</ul>
      </div>
      <div data-role="footer">	
	<form action="scribe-sort">
	  <input type="submit" value="Sort by initiative"/>
	</form>
      </div>
    </div>

    <div id="addPlayer" data-role="page">
      <div data-role="header">	
	<h1>Add Player</h1>
      </div>
      <div data-role="content">
	<form id="addPlayerForm" action="scribe-add">
	
	  <div data-role="fieldcontain">
	    <label for="name">Name:</label>
	    <input type="text" name="name" id="name" value=""  />
	  </div>	

	  <div data-role="fieldcontain">
	    <label for="initiative">Initiative:</label>
 	    <input type="range" name="initiative" id="initiative" value="0" min="0" max="50"  />
	  </div>

	  <div data-role="fieldcontain">
	    <label for="hostile-p">Side?:</label>
	    <select name="hostile-p" id="hostile-p" data-role="slider">
	      <option value="T">Hostile</option>
	      <option value="nil">Ally</option>
	    </select>
	  </div>

	  <input type="submit" data-role="button" value="Add"/>

	</form>
      </div>
    </div>
    <div id="editPlayer" data-role="page">
      <div data-role="header">
	<h1>player name</h1>
      </div>
      <div data-role="content">
	<form id="editPlayerForm" >
	  <div data-role="fieldcontain">
	    <label for="damage">Damage:</label>
 	    <input type="range" name="damage" id="damage" value="0" min="0" max="200"  />
	  </div>
	  <div data-role="fieldcontain">
	    <label for="healing">Healing:</label>
 	    <input type="range" name="healing" id="healing" value="0" min="0" max="100"  />
	  </div>
	  <div data-role="fieldcontain">
	    <label for="initiative2">Initiative:</label>
 	    <input type="range" name="initiative2" id="initiative2" value="0" min="0" max="50"  />
	  </div>
	  <div data-role="fieldcontain">
 	    <fieldset data-role="controlgroup">
	      <input type="checkbox" name="bloodied" id="bloodied" class="custom" />
	      <label for="bloodied">Bloodied</label>
	    </fieldset>
	  </div>
	</form>
      </div>
      <div data-role="footer">
	<button id="savePlayer" data-icon="check">Save</button>
	<button data-icon="delete">DEAD</button>
      </div>
    </div>
  </body>
</html>
